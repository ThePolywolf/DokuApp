<UserControl x:Class="DokuApp.View.EntrySlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DokuApp.View"
             mc:Ignorable="d" 
             Height="100" d:DesignWidth="300">
    <Grid Background="Black">
        <Grid Margin="5" Background="White" MouseDown="ChangeActivation">
            <Grid Margin="5">
                <Rectangle Name="Box" Width="{Binding ElementName=Box, Path=ActualHeight, Mode=OneWay}" Fill="Green" Stroke="Black" StrokeThickness="5" RadiusX="15" RadiusY="15"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
