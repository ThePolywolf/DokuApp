<UserControl x:Class="DokuApp.View.SudokuGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DokuApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="560" d:DesignWidth="560">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
            <RowDefinition Height="5"/>
            
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
            <RowDefinition Height="5"/>
            
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:SudokuRow x:Name="r1" Grid.Row="0"/>
        <local:SudokuRow x:Name="r2" Grid.Row="1"/>
        <local:SudokuRow x:Name="r3" Grid.Row="2"/>
        
        <local:SudokuRow x:Name="r4" Grid.Row="4"/>
        <local:SudokuRow x:Name="r5" Grid.Row="5"/>
        <local:SudokuRow x:Name="r6" Grid.Row="6"/>

        <local:SudokuRow x:Name="r7" Grid.Row="8"/>
        <local:SudokuRow x:Name="r8" Grid.Row="9"/>
        <local:SudokuRow x:Name="r9" Grid.Row="10"/>
    </Grid>
</UserControl>
