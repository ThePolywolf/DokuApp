<UserControl x:Class="DokuApp.View.SelectionSingleBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DokuApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Grid>
        <Rectangle Fill="LightBlue" Height="5" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
        <Rectangle Fill="LightBlue" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
        <Rectangle Fill="LightBlue" Height="5" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
        <Rectangle Fill="LightBlue" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
