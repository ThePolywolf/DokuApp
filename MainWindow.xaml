<Window x:Class="DokuApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DokuApp"
        xmlns:View="clr-namespace:DokuApp.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        PreviewKeyDown="MainWindow_OnKeyDown"
        PreviewKeyUp="MainWindow_OnKeyUp">
    <Grid Margin="60">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <View:CompleteGrid x:Name="FullGrid" Grid.Column="0"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <View:EntryDock x:Name="Entries" Grid.Row="0" Width="310"/>
                <View:SolverDock x:Name="Solvers" Grid.Row="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
